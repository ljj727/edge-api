# Development Environment Settings
DEBUG=true

# Local data directory
DATA_SAVE_FOLDER=./data

# Database
DB_FILE=DxApi.db

# Static files path
STATIC_FILE_PATH=./static

# DX config path (not needed for dev)
DX_CFG_PATH=./dx.cfg

# Core services disabled for frontend/backend only testing
ENABLE_CORE_SERVICES=false

# JWT settings (use defaults for dev)
JWT_SECRET_KEY=dev-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8400

# MediaMTX (RTSP to HLS/WebRTC streaming server)
MEDIAMTX_API_URL=http://localhost:9997/v3
MEDIAMTX_HLS_URL=http://localhost:8888
MEDIAMTX_WEBRTC_URL=http://localhost:8889
MEDIAMTX_ENABLED=true
